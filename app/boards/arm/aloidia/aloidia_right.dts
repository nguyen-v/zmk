#include "aloidia.dtsi"

/{
    ext-power {
            compatible = "zmk,ext-power-generic";
            label = "EXT_POWER";
            control-gpios = <&gpio1 10 GPIO_ACTIVE_HIGH>;
            init-delay-ms = <50>;
        };
};

nice_view_spi: &spi1 {
	compatible = "nordic,nrf-spim";
	sck-pin = <4>;
	mosi-pin = <26>;
	miso-pin = <25>; // unused
	cs-gpios = <&gpio0 27 GPIO_ACTIVE_HIGH>;
};

&i2c0 {
	status = "okay";
	sda-pin = <11>;
	scl-pin = <41>;

	fuel_gauge: max17048@36 {
		compatible = "maxim,max17048";
		status = "okay";
		label = "BATTERY";
		reg = <0x36>;
	};
};

