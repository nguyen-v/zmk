    left_encoder_ec11: encoder_left_ec11 {
        a-gpios = <&gpio1 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio1 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    };

    left_encoder_evq: encoder_left_evq {
