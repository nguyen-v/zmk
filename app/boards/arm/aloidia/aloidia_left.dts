/{
    kscan0: kscan {
            compatible = "zmk,kscan-gpio-matrix";
            label = "KSCAN";

            diode-direction = "row2col";

            row-gpios
                = <&gpio0 3  GPIO_ACTIVE_HIGH>
                , <&gpio1 15 GPIO_ACTIVE_HIGH>
                , <&gpio1 14 GPIO_ACTIVE_HIGH>
                , <&gpio1 13 GPIO_ACTIVE_HIGH>
                , <&gpio1 12 GPIO_ACTIVE_HIGH>
                ;
            col-gpios
                = <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                ;
    };

    
    left_encoder_ec11: encoder_left_ec11 {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER_EC11";
        a-gpios = <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 25 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        resolution = <4>;
    };

    left_encoder_evq: encoder_left_evq {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER_EVQ";
        a-gpios = <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        resolution = <4>;
    };

    left_encoder_dummy1: encoder_left_dummy1 {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER_DUMMY1";
        a-gpios = <&gpio1 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio1 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        resolution = <4>;
    };

    left_encoder_dummy2: encoder_left_dummy2 {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER_DUMMY2";
        a-gpios = <&gpio1 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio1 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        resolution = <4>;
    };

	sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder_ec11 &left_encoder_evq &left_encoder_dummy1 &left_encoder_dummy2>;
    };
};   

&left_encoder_ec11 {
	status = "okay";
};

&left_encoder_evq {
	status = "okay";
};

&left_encoder_dummy1 {
	status = "okay";
};

&left_encoder_dummy2 {
	status = "okay";
};

